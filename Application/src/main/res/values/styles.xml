<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Base Theme-->
    <style name="Theme.Proxy.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/common_proxy_dark_primary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textColorPrimary">@color/common_text_inverse</item>
        <item name="android:textColorSecondary">@color/common_text_inverse</item>
        <item name="android:textColorHint">@color/common_text_disabled</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect"
              tools:targetApi="lollipop">@color/common_proxy_zoidberg
        </item>
    </style>


    <!--Used for the MainActivities custom style toolbar, Dark text, light background toolbar-->
    <style name="Theme.Proxy.Base.DarkActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/common_proxy_dark_primary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textColorPrimary">@color/common_text</item>
        <item name="android:textColorSecondary">@color/common_proxy_dark_selected</item>
        <item name="android:textColorHint">@color/common_text_disabled</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect"
              tools:targetApi="lollipop">@color/common_proxy_zoidberg
        </item>
    </style>

    <!--Used for activities that edit user info. Light text, dark background toolbar-->
    <style name="Theme.Proxy.Base.Light" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/common_proxy_light_primary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textColorPrimary">@color/common_text_inverse</item>
        <item name="android:textColorSecondary">@color/common_text_secondary_inverse</item>
        <item name="android:textColorHint">@color/common_text_disabled</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorEdgeEffect"
              tools:targetApi="lollipop">@color/common_proxy_zoidberg
        </item>
    </style>

    <style name="Widget.Proxy.SlidingTabView.Tab" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/common_proxy_dark_selected</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/common_proxy_dark_selected</item>
    </style>

    <style name="Widget.Proxy.CheckedTextView.CheckedBox" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/common_proxy_dark_selected</item>
        <item name="colorPrimary">@color/common_proxy_dark_selected</item>
        <item name="colorAccent">@color/common_blue</item>
    </style>

    <style name="Widget.Proxy.App.Popup" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/common_text</item>
        <item name="android:textColor">@color/common_text</item>
    </style>

    <style name="Widget.Proxy.App.Dialog" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textColorPrimary">@color/common_text</item>
        <item name="android:textColor">@color/common_text</item>
        <item name="colorControlNormal">@color/common_text_disabled</item>
        <item name="colorControlHighlight">@color/common_blue</item>
    </style>

    <style name="Widget.Proxy.EditText.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/common_text_disabled</item>
        <item name="android:textColorHint">@color/common_text_disabled</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Proxy.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColorSecondary">@color/common_text_disabled</item>
    </style>

    <style name="Widget.Proxy.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/common_blue</item>
    </style>

</resources>