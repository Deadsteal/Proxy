<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/adapter_add_channel_list_item_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_whitebox_darkclick">

    <ImageView
        android:id="@+id/adapter_add_channel_list_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin_tiny"
        android:layout_marginBottom="@dimen/common_margin_xtiny"
        android:layout_marginTop="@dimen/common_margin_xtiny"
        android:contentDescription="@string/user_image"/>

    <TextView
        android:id="@+id/adapter_add_channel_list_item_label"
        style="@style/Proxy.TextAppearance.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin_tiny"
        android:layout_toEndOf="@id/adapter_add_channel_list_item_image"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_line"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/common_margin_xxtiny"
        android:layout_toEndOf="@id/adapter_add_channel_list_item_image"
        android:background="@color/common_divider"/>
</RelativeLayout>
    