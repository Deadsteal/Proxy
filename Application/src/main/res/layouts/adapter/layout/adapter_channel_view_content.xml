<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/adapter_channel_grid_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_whitebox_darkclick"
    android:paddingTop="@dimen/common_margin_xxtiny"
    android:paddingBottom="@dimen/common_margin_xxtiny">

    <ImageView
        android:id="@+id/adapter_channel_view_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin_small"
        android:contentDescription="@string/channel_image"/>

    <TextView
        android:id="@+id/adapter_channel_view_content"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_small"
        android:layout_toEndOf="@id/adapter_channel_view_content_image"
        android:ellipsize="end"
        android:maxLines="3"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/common_text"/>

</RelativeLayout>