<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/adapter_channel_grid_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_whitebox_darkclick">

    <ImageView
        android:id="@+id/adapter_channel_view_content_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_margin_tiny"
        android:contentDescription="@string/channel_image"/>

    <TextView
        android:id="@+id/adapter_channel_view_content"
        style="@style/Proxy.TextAppearance.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_tiny"
        android:layout_toEndOf="@id/adapter_channel_view_content_image"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3"
        android:paddingBottom="@dimen/common_margin_xtiny"
        android:paddingTop="@dimen/common_margin_xtiny"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_line"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/common_margin_tiny"
        android:layout_toEndOf="@id/adapter_channel_view_content_image"
        android:background="@color/common_divider"/>
</RelativeLayout>