<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fragment_group_main_coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_group_main_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.shareyourproxy.app.adapter.BaseRecyclerView
            android:id="@+id/fragment_group_main_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_group_main_fab_group"
        android:layout_width="@dimen/common_fab_radius"
        android:layout_height="@dimen/common_fab_radius"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/common_margin_tiny"
        android:layout_marginEnd="@dimen/common_margin_tiny"
        android:scaleType="center"
        app:backgroundTint="@color/common_proxy_zoidberg"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="@color/common_red_light"/>

    <TextView
        android:id="@+id/fragment_group_main_empty_textview"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="@dimen/common_rect_tiny"
        android:text="@string/fragment_group_main_empty_text"
        android:textColor="@color/common_text_disabled"
        android:visibility="gone"/>
</FrameLayout>