<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/common_blue">

    <TextView
        android:id="@+id/fragment_dispatch_image"
        style="@style/Proxy.TextAppearance.Headline.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/common_margin_medium"
        android:contentDescription="@string/proxy_logo"
        android:drawablePadding="@dimen/common_margin_xxtiny"
        android:gravity="center"
        android:text="@string/proxy_hook"/>

    <ProgressBar
        android:id="@+id/fragment_dispatch_progress"
        style="@style/Widget.Proxy.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_rect_small"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-25dp"
        android:indeterminate="true"/>

</FrameLayout>