<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/fragment_introduction_main_container"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_introduction_main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/fragment_introduction_main_pageindicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_xxhuge"
        android:layout_gravity="bottom"
        app:radius="@dimen/common_margin_xxxtiny"
        app:pageColor="@color/common_divider"
        app:paddingEnd="@dimen/common_margin_xxtiny"
        app:fillColor="@android:color/white"
        app:strokeWidth="0dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragment_introduction_main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/common_margin_tiny"
        android:layout_marginEnd="@dimen/common_margin_tiny"
        android:scaleType="center"
        app:backgroundTint="@color/common_blue"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right|end"
        app:rippleColor="@color/common_blue_light"/>

</FrameLayout>