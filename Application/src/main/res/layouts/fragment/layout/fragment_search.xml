<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fragment_search_bar_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_rect_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:transitionName="@string/search_container">
        <ImageButton
            android:id="@+id/fragment_search_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ripple"
            android:contentDescription="@string/action_menu_back_from_search"
            android:paddingEnd="@dimen/common_margin_small"
            android:paddingStart="@dimen/common_margin_small"
            android:transitionName="@string/hamburger"/>
        <com.shareyourproxy.widget.CustomEditText
            android:id="@+id/fragment_search_edittext"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_xxtiny"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            android:hint="@string/search_for_people"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:inputType="textFilter"
            android:singleLine="true"
            android:textColor="@color/common_text"
            android:textColorHint="@color/common_text_disabled"
            android:transitionName="@string/search_textview"/>
        <ImageView
            android:id="@+id/fragment_search_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ripple"
            android:contentDescription="@string/description_clear_search"
            android:paddingEnd="@dimen/common_margin_small"
            android:paddingStart="@dimen/common_margin_small"/>
    </LinearLayout>
    <FrameLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/common_rect_small">

        <com.shareyourproxy.app.adapter.BaseRecyclerView
            android:id="@+id/fragment_search_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/fragment_search_empty_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/common_margin_tiny"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_search_empty_textview"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawablePadding="@dimen/common_margin_xxtiny"
                android:gravity="center"
                android:text="@string/fragment_search_empty_text"
                android:textColor="@color/common_text_disabled"/>

            <Button
                android:id="@+id/fragment_search_empty_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_margin_xxtiny"
                android:background="@drawable/selector_button_blue"
                android:paddingEnd="@dimen/common_margin_xxtiny"
                android:paddingStart="@dimen/common_margin_xxtiny"
                android:text="@string/send_invite"/>

        </LinearLayout>
        <ProgressBar
            android:id="@+id/fragment_search_loadingview"
            style="@style/Widget.Proxy.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_margin_huge"
            android:layout_gravity="top"
            android:layout_marginTop="-12dp"
            android:indeterminate="true"
            android:visibility="gone"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_margin_line"
            android:background="@color/common_divider"/>
    </FrameLayout>
</FrameLayout>