<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fragment_introduction_third_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_proxy_slide_three"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_introduction_third_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="-40dp"
        android:contentDescription="@string/proxy_logo"/>

    <TextView
        android:id="@+id/fragment_introduction_third_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:layout_marginTop="@dimen/common_margin_tiny"
        android:layout_marginStart="@dimen/common_margin_small"/>

</LinearLayout>
