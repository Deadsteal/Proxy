<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_user_feed_empty_textview"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_rect_large"
        android:drawablePadding="@dimen/common_margin_xxtiny"
        android:gravity="center"
        android:textColor="@color/common_text_disabled"
        android:visibility="gone"/>


    <com.shareyourproxy.app.adapter.BaseRecyclerView
        android:id="@+id/fragment_user_feed_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>