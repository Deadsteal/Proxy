<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/widget_contactsearchlayout_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ripple"
        android:contentDescription="@string/menu"
        android:paddingBottom="@dimen/common_margin_xxtiny"
        android:paddingEnd="@dimen/common_margin_tiny"
        android:paddingStart="@dimen/common_margin_tiny"
        android:paddingTop="@dimen/common_margin_xxtiny"
        android:transitionName="@string/hamburger"/>

    <TextView
        android:id="@+id/widget_contactsearchlayout_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/common_rect_small"
        android:duplicateParentState="true"
        android:text="@string/search_for_people"
        android:transitionName="@string/search_textview"/>

</merge>