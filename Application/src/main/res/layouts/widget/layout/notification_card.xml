<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_margin_xxtiny">
        <RelativeLayout
            android:id="@+id/widget_notification_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/common_margin_tiny"
            android:paddingEnd="@dimen/common_margin_medium"
            android:paddingTop="@dimen/common_margin_tiny">

            <ImageView
                android:id="@+id/widget_notification_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/common_margin_xxtiny"/>

            <TextView
                android:id="@+id/widget_notification_content_title"
                style="@style/Proxy.TextAppearance.Headline.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/widget_notification_imageview"
                android:paddingEnd="@dimen/common_margin_tiny"
                android:paddingStart="@dimen/common_margin_tiny"/>

            <TextView
                android:id="@+id/widget_notification_content_message"
                style="@style/Proxy.TextAppearance.Subhead.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/widget_notification_content_title"
                android:layout_marginTop="@dimen/common_margin_xxtiny"
                android:layout_toStartOf="@id/widget_notification_imageview"
                android:paddingEnd="@dimen/common_margin_tiny"
                android:paddingStart="@dimen/common_margin_tiny"/>

            <TextView
                android:id="@+id/widget_notification_action_text"
                style="@style/Proxy.TextAppearance.Button.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/widget_notification_content_message"
                android:layout_marginStart="@dimen/common_margin_tiny"
                android:paddingTop="@dimen/common_margin_tiny"
                android:text="@string/send_invite"/>

            <TextView
                android:id="@+id/widget_notification_dismiss_text"
                style="@style/Proxy.TextAppearance.Button.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/widget_notification_content_message"
                android:layout_marginStart="@dimen/common_margin_tiny"
                android:layout_toEndOf="@id/widget_notification_action_text"
                android:paddingTop="@dimen/common_margin_tiny"
                android:text="@string/dismiss"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</merge>