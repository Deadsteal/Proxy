<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_sharelink_message_text"
        style="@style/Proxy.TextAppearance.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_margin_medium"
        android:layout_marginStart="@dimen/common_margin_medium"
        android:layout_marginTop="@dimen/common_margin_xxtiny"/>

    <com.shareyourproxy.app.adapter.BaseRecyclerView
        android:id="@+id/dialog_sharelink_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_margin_xxxhuge"/>
</FrameLayout>